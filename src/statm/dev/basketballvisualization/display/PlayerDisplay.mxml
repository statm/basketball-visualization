<?xml version="1.0" encoding="utf-8"?>
<s:Group 
    x="{player.x * 10 - width / 2}" y="{player.y * 10 - height / 2}" width="20" height="20"
    visible="false"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Script>
        <![CDATA[
            import statm.dev.basketballvisualization.data.entities.Player;
            import statm.dev.basketballvisualization.data.entities.PlayerType;

            [Bindable]
            private var player:Player;

            public function setPlayer(player:Player):void
            {
                this.player = player;
                this.visible = (player != null);
            }
        ]]>
    </fx:Script>

    <s:Ellipse 
        left="0" right="0" top="0" bottom="0">
        <s:stroke>
            <s:SolidColorStroke 
                color="#FFFFFF"
                weight="2"/>
        </s:stroke>
        <s:fill>
            <s:SolidColor color="{(player.type == PlayerType.HOME) ? 0xFF9900 : 0x0066FF}"/>
        </s:fill>

    </s:Ellipse>

    <!--<s:Label 
        top="-15"
        color="#FFFFFF"
        fontWeight="bold"
        horizontalCenter="0"
        text="{'(' + player.x.toFixed(0) + ',' + player.y.toFixed(0) + ')'}"/>-->

    <s:filters>
        <s:GlowFilter color="#000000"/>
    </s:filters>
</s:Group>
