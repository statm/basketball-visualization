<?xml version="1.0" encoding="utf-8"?>
<s:Group 
    width="940" height="500"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Declarations>
        <s:SolidColorStroke id="lineStroke"
            color="#FFFFFF"
            weight="4"
			caps="square"
            joints="miter"/>
    </fx:Declarations>

    <!-- reference: http://www.betterbasketballcoaching.com/image-files/basketball_court_dimensions_ncaa.jpg -->

    <!-- border -->
    <s:Rect 
        left="0" right="0" top="0" bottom="0"
        stroke="{lineStroke}"/>

    <!-- division line -->
    <s:Line 
        top="0" bottom="0"
        horizontalCenter="0"
        stroke="{lineStroke}"/>

    <!-- center circle -->
    <s:Ellipse 
        width="120" height="120"
        horizontalCenter="0"
        verticalCenter="0"
        stroke="{lineStroke}"/>

    <!-- basket and backboard (L) -->
    <s:Group 
        left="40"
        verticalCenter="0">
        <s:Line 
            height="60"
			left="0"
            stroke="{lineStroke}"/>
        <s:Line 
            width="5"
			left="0"
            verticalCenter="0"
            stroke="{lineStroke}"/>
        <s:Ellipse 
            width="18" height="18"
            left="5"
            verticalCenter="0"
            stroke="{lineStroke}"/>
    </s:Group>

    <!-- basket and backboard (R) -->
    <s:Group 
        right="40"
        verticalCenter="0">
        <s:Line 
            height="60"
            right="0"
            stroke="{lineStroke}"/>
        <s:Line 
            width="5"
            right="0"
            verticalCenter="0"
            stroke="{lineStroke}"/>
		<s:Ellipse 
			width="18" height="18"
			right="5"
			verticalCenter="0"
			stroke="{lineStroke}"/>
    </s:Group>
	
	<!-- three-point line (L) -->
	<s:Group
		left="2"
		verticalCenter="0">
		<s:Line width="52.5" top="0" stroke="{lineStroke}"/>
		<s:Line width="52.5" top="395" stroke="{lineStroke}"/>
		<s:Group clipAndEnableScrolling="true" left="52.5">
			<s:Ellipse width="395" height="395" stroke="{lineStroke}" top="0" left="-197.5"/>
		</s:Group>
	</s:Group>
	
	<!-- three-point line (R) -->
	<s:Group
		right="0"
		verticalCenter="0">
		<s:Line width="52.5" top="0" right="0" stroke="{lineStroke}"/>
		<s:Line width="52.5" top="395" right="0" stroke="{lineStroke}"/>
		<s:Group clipAndEnableScrolling="true" right="52.5">
			<s:Ellipse width="395" height="395" stroke="{lineStroke}" top="0" right="-197.5"/>
		</s:Group>
	</s:Group>

	<!-- three-second area (L) -->
	<s:Group left="2" verticalCenter="0">
		<s:Rect width="190" height="120" stroke="{lineStroke}" top="4"/>
		<s:Group clipAndEnableScrolling="true" left="190" height="128">
			<s:Ellipse width="120" height="120" stroke="{lineStroke}" left="-60" top="4"/>
		</s:Group>
	</s:Group>
	
	<!-- three-second area (R) -->
	<s:Group right="0" verticalCenter="0">
		<s:Rect width="190" height="120" stroke="{lineStroke}" top="4" right="0"/>
		<s:Group clipAndEnableScrolling="true" right="190" height="128">
			<s:Ellipse width="120" height="120" stroke="{lineStroke}" right="-60" top="4"/>
		</s:Group>
	</s:Group>
</s:Group>
