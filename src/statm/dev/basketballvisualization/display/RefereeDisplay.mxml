<?xml version="1.0" encoding="utf-8"?>
<s:Group 
	x="{referee.x * 10 - width / 2}" y="{referee.y * 10 - height / 2}" width="15" height="15"
	visible="false"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Script>
        <![CDATA[
            import statm.dev.basketballvisualization.data.entities.Referee;
            [Bindable]
            private var referee:Referee;

            public function setReferee(referee:Referee):void
            {
                this.referee = referee;
				this.visible = (referee != null);
            }
        ]]>
    </fx:Script>
	
	<s:Ellipse 
		left="0" right="0" top="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke 
				color="#FFFFFF"
				weight="2"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor color="#CCCCCC"/>
		</s:fill>
	</s:Ellipse>
	
	<s:Label 
		top="-15"
		color="#FFFFFF"
		fontWeight="bold"
		horizontalCenter="0"
		text="{'(' + referee.x.toFixed(0) + ',' + referee.y.toFixed(0) + ')'}"/>
	
	<s:filters>
		<s:GlowFilter color="#000000"/>
	</s:filters>
</s:Group>
