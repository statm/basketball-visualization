<?xml version="1.0" encoding="utf-8"?>
<s:Group 
    width="970" height="530"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:display="statm.dev.basketballvisualization.display.*">

    <fx:Script>
        <![CDATA[
            import statm.dev.basketballvisualization.data.entities.Game;

            [Bindable]
            private var game:Game;

            public function setGame(game:Game):void
            {
                this.game = game;
            }
        ]]>
    </fx:Script>

    <s:Rect 
        left="0" right="0" top="0" bottom="0">
        <s:fill>
            <s:SolidColor color="#CCCCCC"/>
        </s:fill>
    </s:Rect>

    <s:Group 
        left="15" right="15" top="15" bottom="15">
		<s:Rect left="0" right="0" top="0" bottom="0">
			<s:stroke>
				<s:SolidColorStroke weight="4" color="#FFFFFF"/>
			</s:stroke>
		</s:Rect>
		
		<display:RefereeDisplay id="ref0"/>
		<display:RefereeDisplay id="ref1"/>
		<display:RefereeDisplay id="ref2"/>
        <display:PlayerDisplay id="player0"/>
        <display:PlayerDisplay id="player1"/>
        <display:PlayerDisplay id="player2"/>
        <display:PlayerDisplay id="player3"/>
        <display:PlayerDisplay id="player4"/>
        <display:PlayerDisplay id="player5"/>
        <display:PlayerDisplay id="player6"/>
        <display:PlayerDisplay id="player7"/>
        <display:PlayerDisplay id="player8"/>
        <display:PlayerDisplay id="player9"/>
        <display:BallDisplay id="ball"/>
    </s:Group>
</s:Group>
